                                                                "type": "string"
                                                            },
                                                            "startIp": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "required": [
                                                            "provisioningState",
                                                            "mountTargetId",
                                                            "fileSystemId",
                                                            "startIp",
                                                            "endIp",
                                                            "gateway",
                                                            "netmask",
                                                            "ipAddress"
                                                        ],
