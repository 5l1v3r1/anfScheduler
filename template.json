                        "Scheduler_House-Keeping_Logic": {
                            "actions": {
                                "Condition": {
                                    "actions": {
                                        "Delete_Older_Snapshot(s)_(Azure_NetApp_Files_API)": {
                                            "runAfter": {},
                                            "type": "Http",
                                            "inputs": {
                                                "authentication": {
                                                    "type": "ManagedServiceIdentity"
                                                },
                                                "method": "DELETE",
                                                "uri": "https://management.azure.com/subscriptions/@{variables('subscriptionId')}/resourceGroups/@{variables('resourceGroup')}/providers/Microsoft.NetApp/netAppAccounts/@{variables('netappAccount')}/capacityPools/@{variables('capacityPool')}/volumes/@{variables('volName')}/snapshots/@{variables('firstSnapshot')}?api-version=2017-08-15"
                                            }
                                        },
                                        "Terminate_-_Successfully_removed_older_snapshots": {
                                            "runAfter": {
                                                "Delete_Older_Snapshot(s)_(Azure_NetApp_Files_API)": [
                                                    "Succeeded"
                                                ]
                                            },
                                            "type": "Terminate",
                                            "inputs": {
                                                "runStatus": "Succeeded"
                                            }
                                        }
                                    },
                                    "runAfter": {
                                        "Set_variable_-_firstSnapshot": [
                                            "Succeeded"
                                        ]
                                    },
                                    "else": {
                                        "actions": {
                                            "Terminate_successfully_-_No_snapshots_to_remove": {
                                                "runAfter": {},
                                                "type": "Terminate",
                                                "inputs": {
                                                    "runStatus": "Succeeded"
                                                }
                                            }
                                        }
                                    },
                                    "expression": {
                                        "and": [
                                            {
                                                "greaterOrEquals": [
                                                    "@length(body('Parse_JSON_-_Post_Snapshot_Response_Body')?['value'])",
                                                    "@variables('snapshotRetention')"
                                                ]
                                            }
                                        ]
                                    },
                                    "type": "If"
                                },
                                "Get_list_of_snapshots_from_Target_Volume_(Post-Success)": {
                                    "runAfter": {},
                                    "type": "Http",
                                    "inputs": {
                                        "authentication": {
                                            "type": "ManagedServiceIdentity"
                                        },
                                        "method": "GET",
                                        "uri": "https://management.azure.com/subscriptions/@{variables('subscriptionId')}/resourceGroups/@{variables('resourceGroup')}/providers/Microsoft.NetApp/netAppAccounts/@{variables('netappAccount')}/capacityPools/@{variables('capacityPool')}/volumes/@{variables('volName')}/snapshots?api-version=2017-08-15"
                                    }
                                },
                                "Parse_JSON_-_Post_Snapshot_Response_Body": {
                                    "runAfter": {
                                        "Get_list_of_snapshots_from_Target_Volume_(Post-Success)": [
                                            "Succeeded"
                                        ]
                                    },
                                    "type": "ParseJson",
                                    "inputs": {
                                        "content": "@body('Get_list_of_snapshots_from_Target_Volume_(Post-Success)')",
                                        "schema": {
                                            "properties": {
                                                "value": {
                                                    "items": {
                                                        "properties": {
                                                            "id": {
                                                                "type": "string"
                                                            },
                                                            "location": {
                                                                "type": "string"
                                                            },
                                                            "name": {
                                                                "type": "string"
                                                            },
                                                            "properties": {
                                                                "properties": {
                                                                    "created": {
                                                                        "type": "string"
                                                                    },
                                                                    "fileSystemId": {
                                                                        "type": "string"
                                                                    },
                                                                    "name": {
                                                                        "type": "string"
                                                                    },
                                                                    "provisioningState": {
                                                                        "type": "string"
                                                                    },
                                                                    "snapshotId": {
                                                                        "type": "string"
                                                                    }
                                                                },
                                                                "type": "object"
                                                            },
                                                            "type": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "required": [
                                                            "id",
                                                            "name",
                                                            "type",
                                                            "location",
                                                            "properties"
                                                        ],
                                                        "type": "object"
                                                    },
                                                    "type": "array"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "Set_variable_-_firstSnapshot": {
                                    "runAfter": {
                                        "Parse_JSON_-_Post_Snapshot_Response_Body": [
                                            "Succeeded"
                                        ]
                                    },
                                    "type": "SetVariable",
                                    "inputs": {
                                        "name": "firstSnapshot",
                                        "value": "@{body('Parse_JSON_-_Post_Snapshot_Response_Body')?['value']?[0]?['properties']?['name']}"
                                    }
                                }
                            },
                            "runAfter": {
                                "Take_snapshot_on_the_target_volume_(Azure_NetApp_Files_API)": [
                                    "Succeeded"
                                ]
                            },
                            "else": {
                                "actions": {
                                    "Terminate": {
                                        "runAfter": {},
                                        "type": "Terminate",
                                        "inputs": {
                                            "runError": {
                                                "code": "999",
                                                "message": "Scheduler could not create a snapshot at this time. The Azure API did not return a successful status of 201. Please try again later."
                                            },
                                            "runStatus": "Failed"
                                        }
                                    }
                                }
                            },
                            "expression": {
                                "and": [
                                    {
                                        "equals": [
                                            "@outputs('Take_snapshot_on_the_target_volume_(Azure_NetApp_Files_API)')['statusCode']",
                                            201
                                        ]
                                    }
                                ]
                            },
                            "type": "If"
                        },
                        "Take_snapshot_on_the_target_volume_(Azure_NetApp_Files_API)": {
                            "runAfter": {
                                "Parse_JSON_-_Snapshots_Response_Body": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Http",
                            "inputs": {
                                "authentication": {
                                    "type": "ManagedServiceIdentity"
                                },
                                "body": {
                                    "location": "@body('Parse_JSON_-_Volume_Response_Body')?['location']",
                                    "properties": {
                                        "fileSystemId": "@body('Parse_JSON_-_Volume_Response_Body')?['properties']?['fileSystemId']"
                                    }
                                },
                                "method": "PUT",
                                "uri": "https://management.azure.com/subscriptions/@{variables('subscriptionId')}/resourceGroups/@{variables('resourceGroup')}/providers/Microsoft.NetApp/netAppAccounts/@{variables('netappAccount')}/capacityPools/@{variables('capacityPool')}/volumes/@{variables('volName')}/snapshots/scheduler-@{ticks(utcNow())}?api-version=2017-08-15"
                            }
                        },
                        "User_Configuration_-_Capacity_Pool": {
                            "runAfter": {
                                "User_Configuration_-_Resource_Group": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "capacityPool",
                                        "type": "String"
                                    }
                                ]
                            }
                        },
                        "User_Configuration_-_NetApp_Account": {
                            "runAfter": {
                                "User_Configuration_-_Subscription_ID": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "netappAccount",
                                        "type": "String"
                                    }
                                ]
                            }
                        },
                        "User_Configuration_-_Resource_Group": {
                            "runAfter": {
                                "User_Configuration_-_NetApp_Account": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "resourceGroup",
                                        "type": "String"
                                    }
                                ]
                            }
                        },
                        "User_Configuration_-_Snapshot_Retention": {
                            "runAfter": {
                                "User_Configuration_-_Volume_Name": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "snapshotRetention",
                                        "type": "Integer",
                                        "value": 7
                                    }
                                ]
                            }
                        },
                        "User_Configuration_-_Subscription_ID": {
                            "runAfter": {},
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "subscriptionId",
                                        "type": "String"
                                    }
                                ]
                            }
                        },
                        "User_Configuration_-_Volume_Name": {
                            "runAfter": {
                                "User_Configuration_-_Capacity_Pool": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "volName",
                                        "type": "String"
                                    }
                                ]
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {}
            }
        }
    ]
